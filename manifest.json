{
    "manifest_version": 2,
    "name": "ZotShelf",
    "version": "1.0.0",
    "description": "A visual EPUB library that displays book covers in a grid view",
    "author": "Your Name",
    "homepage_url": "https://github.com/yourusername/zotshelf",
    "icons": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    },
    "applications": {
      "zotero": {
        "id": "zotshelf@example.com",
        "update_url": "https://example.com/zotshelf/updates.json",
        "strict_min_version": "7.0.0",
        "strict_max_version": "7.*.*"
      }
    },
    "permissions": [
      "tabs",
      "storage"
    ],
    "background": {
      "scripts": [
        "content/zotshelf.js"
      ]
    },
    "experiment_apis": {
      "zotero": {
        "schema": "schema.json",
        "parent": {
          "scopes": ["addon_parent"],
          "script": "content/zotshelf.js",
          "events": ["startup"]
        }
      }
    }
  }
